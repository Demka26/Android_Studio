<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background2"
    tools:context=".ForgotPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3fff"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Password Recovery "
            android:background="@drawable/circle"
            android:gravity="center"
            android:textColor="#ffffff"/>

        <EditText
            android:id="@+id/forgotpassword"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="Enter your registered email"
            android:textColorHint="#FFFBF8"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn"/>

        <Button
            android:id="@+id/passwordrecoverbutton"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="Click here to recover"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:background="@drawable/btncolor"
            android:textColor="#FFFBF8"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#3fff"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/gobacktologin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go back to sign in"
            android:layout_marginTop="30dp"
            android:textColor="#FFFBF8"/>




    </LinearLayout>
</LinearLayout>






